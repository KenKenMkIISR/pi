REM Calculate Napier's Constant
REM  by BIGNUM Class (1000 digits)

USECLASS BIGNUM
A=NEW(BIGNUM,1):N=NEW(BIGNUM,1)

K=1
FOR I=1 TO 450
 CALL A.DIV(A,K)
 CALL N.ADD(N,A)
 K=K+1
NEXT

WIDTH 48
PRINT N.RETVAL(0);".";
FOR I=1 TO 250
 S$="000"+DEC$(N.RETVAL(I)):PRINT S$(-4);
NEXT
END
