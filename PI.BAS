REM Calculate PI by BIGNUM Class (1000 digits)
USECLASS BIGNUM
A=NEW(BIGNUM,0):B=NEW(BIGNUM,0):P=NEW(BIGNUM,0)

CALL B.SETVAL(16*5)
H=5*5:E=1:K=1
FOR I=1 TO 716
 CALL B.DIV(B,H):CALL A.DIV(B,K)
 IF E THEN CALL P.ADD(P,A) ELSE CALL P.SUB(P,A)
 K=K+2:E=1-E
NEXT

CALL B.SETVAL(4*239)
H=239*239:E=0:K=1
FOR I=1 TO 211
 CALL B.DIV(B,H):CALL A.DIV(B,K)
 IF E THEN CALL P.ADD(P,A) ELSE CALL P.SUB(P,A)
 K=K+2:E=1-E
NEXT

WIDTH 48
PRINT P.RETVAL(0);".";
FOR I=1 TO 250
 S$="000"+DEC$(P.RETVAL(I)):PRINT S$(-4);
NEXT
END
