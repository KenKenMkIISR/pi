REM Calculate PI by BIGNUM Class (1000 digits)
USECLASS BIGNUM

A=NEW(BIGNUM,0):B=NEW(BIGNUM,0):P=NEW(BIGNUM,0)

B.SETVAL(16*5)
H=5*5:E=1:K=1
FOR I=1 TO 716
 B.DIV(B,H):A.DIV(B,K)
 IF E THEN P.ADD(P,A) ELSE P.SUB(P,A)
 K=K+2:E=1-E
NEXT

B.SETVAL(4*239)
H=239*239:E=0:K=1
FOR I=1 TO 211
 B.DIV(B,H):A.DIV(B,K)
 IF E THEN P.ADD(P,A) ELSE P.SUB(P,A)
 K=K+2:E=1-E
NEXT

WIDTH 48
P.PRT(1,1000)
END
